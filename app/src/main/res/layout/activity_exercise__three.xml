<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context=".Exercise_Three">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/exercise_three_imageview"
        android:scaleType="fitXY"
        android:src="@drawable/exercise3_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercise_three_scrollview"
        android:layout_marginTop="20dp"
        android:layout_below="@id/exercise_three_imageview">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_aim_textview"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Aim"
                android:layout_gravity="center"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_aim_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="To strengthen your thighs, hip flexors, hamstrings and gluteal muscles."
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_equipment_textview"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Equipment Required"
                android:layout_gravity="center"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_equipment_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="A short step and stable even ground (for safety reasons, make sure that
                the platform you are using is secure)"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_technique_textview"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Technique"
                android:layout_gravity="center"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_technique_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/exercise_three_technique"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_keypoints_textview"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Key Points to Remember"
                android:layout_gravity="center"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_keypoints_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Keep your body as straight as possible to minimize stress on the lower back and legs."
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_alternatives_textview"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Alternatives"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_three_alternatives_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/exercise_three_alternative"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>